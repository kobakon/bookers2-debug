<h2>Books search for "test"</h2>

<!--検索モデルがUserの時-->
<table class="table">
  <% if @range == "User" %>
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th colspan1></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(50, 50) %></td>
          <td><%= user.name %></td>
          <td><%= link_to "show", user_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
  <!--検索モデルがBookの時-->
    <thead>
      <tr>
        <th>Image</th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user) do %>
              <%= image_tag book.user.get_profile_image(50, 50) %>
            <% end %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
