<table  class="book_comments">
  <% book.book_comments.each do |book_comment| %>
  <tr>  
    <td>
      <%= link_to(book.user) do %>
        <%= image_tag book.user.get_profile_image(50, 50) %><br>
        <%= book.user.name %>
      <% end %>
    </td>
    <td><%= book_comment.comment %></td>
    <% if book_comment.user == current_user %>
      <td>
        <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote:true , class: "btn btn-sm btn-danger" %>
      </td>
    <% end %>
  </tr>
  <% end %>
</table>
